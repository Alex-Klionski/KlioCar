@model Car
@{
    ViewBag.Title = "Edit Car";
    Layout = "_AdminLayout";
}
    <form asp-action="EditCar" method="post">
        <input type="hidden" asp-for="CarID" />
        <div class="form-group">
            <label asp-for="Model"></label>
            <div><span asp-validation-for="Model" class="text-danger"></span></div>
            <input asp-for="Model" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <div><span asp-validation-for="Category" class="text-danger"></span></div>
            <input asp-for="Category" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <div><span asp-validation-for="Type" class="text-danger"></span></div>
            <input asp-for="Type" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Engine"></label>
            <div><span asp-validation-for="Engine" class="text-danger"></span></div>
            <input asp-for="Engine" class="form-control" />
        </div>        
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
    <form method="post" asp-controller="CarController" asp-action="ImageUpload" enctype="multipart/form-data">
        <div class="form-group">
            <label>Picture:</label>
            <div class="custom-file">
                <input class="form-control custom-file-input" type="file" name="file"/>
                <label class="custom-file-label">Browse...</label>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Upload</button>
        </div>
        <img src=""width="600" height="400" />
    </form>

<script type="text/javascript">
    $(document).ready(function () {
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next(".custom-file-label").html(fileName);
        })
    });
</script>