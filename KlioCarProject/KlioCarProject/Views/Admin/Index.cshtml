@model IEnumerable<Car>
@{ 
    ViewBag.Title = "All Cars";
    // Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Model</th>
        <th class="text-right">Price</th>
        <th class="text-center">Action</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td class="text-right">@item.CarID</td>
            <td>@item.Model</td>
            <td class="text-right">@item.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="DeleteCar" method="post">
                    <a asp-action="EditCar" class="btn btn-sm btn-warning" asp-route-carId="@item.CarID">
                        Edit
                    </a>
                    <input type="hidden" name="CarID" value="@item.CarID"/>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button> 
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="CreateCar" class="btn btn-primary">Add Car</a>
    <a asp-action="Users" class="btn btn-primary">Users</a>
    <a asp-controller="Order" asp-action="List" class="btn btn-primary">Orders</a>
    <a asp-controller="RoleAdmin" asp-action="Index" class="btn btn-primary">Roles</a>
</div>
