@model LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FastKlioCAR</title>
    <link rel="stylesheet" asp-href-include="~/lib/fontawesome/css/*.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="login">
    <div class="container">
        <main role="main" class="pb-3">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="container">
                <div class="d-flex justify-content-center h-100">
                    <div class="card">
                        <div class="card-header">
                            <h3>Log In</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="Login" asp-controller="Account" method="post">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                                    </div>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-key"></i></span>
                                    </div>
                                    <input asp-for="Password" class="form-control" />

                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit">Login</button>
                                </div>
                            </form>
                            <div class="form-group">
                                <h4>External login</h4>
                                <hr />
                                @{
                                    if (Model.ExternalLogins.Count == 0)
                                    {
                                        <div>No external logins configured</div>
                                    }
                                    else
                                    {
                                        <form method="post" asp-action="ExternalLogin" asp-controller="Account">
                                            <div>
                                                @foreach (var provider in Model.ExternalLogins)
                                                {
                                                    <button type="submit" class="btn btn-primary"
                                                            name="provider" value="@provider.Name"
                                                            title="Login using your @provider.DisplayName">
                                                        @provider.DisplayName
                                                        </button>
                                                    }
                                            </div>
                                        </form>
                                    }
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                                Don't have an account? <a href="/Admin/CreateUser">Sign Up</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
